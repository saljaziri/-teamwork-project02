  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="breadcrumb-hero">
        <div class="container">
          <div class="breadcrumb-hero">
            <h2>Players</h2>
            <p>player additions by the users </p>
          </div>
        </div>
      </div>
      <div class="container" id="addContainer">
        <ol>
          <li><a href="/">Home</a></li>
          <li>Players</li>
        </ol>
        <%if(currentUser) { %>
      <div id="addNavbar" class="navbar">
        <ul>
          <li><a class="getstarted" href="/player/add">Add Player</a></li>
        </ul>
      </div>
      <% }%>
    </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Pricing Section ======= -->
    <section id="player" class="pricing">
      <div class="container">
       
        <div class="row">
            <% players.forEach(function(player){ %>

          <div class="col-lg-3 col-md-6">
           
            <div class="box" data-aos="fade-up">
              <h3 id="h3"><a href="/player/detail?id=<%= player._id %>"><%= player.name %></a></h3>
              <h4><sup></sup><span> </span></h4>
             
              <ul>
                <li id="li"><img id="indexImageSize" src="../img/<%= player.playerImage %>"/> </li>
                <li id="li"> <%= player.nationality %></li>
                <li id="li"> <%= player.playerPosition %></li>
                <li id="li">  <%= player.kitNumber %></li>
                <li id="li"> <%= player.trophies %></li>
                
              </ul>
              
              <div class="btn-wrap">
                <%if(currentUser!=null){%>
                    
                  <%if(currentUser.role == "admin" || currentUser._id == player.user._id.toString()) { %>
                <a href="/player/edit?id=<%= player._id %>" class="btn-buy">Edit</a>
                <% }%>
                  <%if(currentUser.role == "admin") { %>
                <a href="/player/delete?id=<%= player._id %>" class="btn-buy">Delete</a>
                <% }%>
                <% }%>
              </div>
            </div>
          </div>


          <% }) %>
        </div>
       
      </div>
     
    </section><!-- End Pricing Section -->


  </main><!-- End #main -->

 