

<main id="main">
  <!-- ======= Breadcrumbs ======= -->
  <section id="breadcrumbs" class="breadcrumbs">
    <div class="breadcrumb-hero">
      <div class="container">
        <div class="breadcrumb-hero">
          <h2>User Profile</h2>
        </div>
      </div>
    </div>
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li>User Profile</li>
      </ol>
    </div>
  </section>
  <!-- End Breadcrumbs -->

  <!-- ======= Contact Section ======= -->
  <section id="userProfile" class="contact">
    <div class="container">
      <div class="row mt-5">
        <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">
          <form
          enctype="multipart/form-data"
            action="/userProfile/update?_method=PUT"
            method="POST"
            class="php-email-form">
            <div class="member-img text-center">
              <% if(userProfile.userImage =="" ) {  %>
                <img class="img-fluid col-md-4 form-group" id="userImage" name="userImage" src="https://via.placeholder.com/1800"/>

             <% }else{ %>
              <img class="img-fluid col-md-4 form-group addEditImageSize" id="userImage" name="userImage" src="../img/<%=userProfile.userImage%>" />
              <input type="hidden" id="previousUserImage" name="previousUserImage" value="<%=userProfile.userImage%>" />

            <%  }%>
              <input type="file" id="userImageFile" name="userImageFile" style="display: none;" />
      
          

            <div class="row">

  

              <div class="form-group mt-3 mt-md-0">
                <select name="nationality" id="nationality" class="form-control">
                  <option value="" disabled selected>Select Nationality</option>
  
                  <% nationalities.forEach(nationality =>{ %>
                  <option <%= nationality==userProfile.nationality ? 'selected' : ''%> value="<%=nationality%>"><%=nationality%></option>
                  <%}) %>
                </select>
              </div>
              <div class="col-md-6 form-group">
                <input
                  type="text"
                  name="favoriteTeam"
                  class="form-control"
                  id="favoriteTeam"
                  placeholder="Favorite Team"
                  value="<%=userProfile.favoriteTeam%>"

                
                />
              </div>
              <div class="col-md-6 form-group mt-3 mt-md-0">
                <input
                  type="text"
                  class="form-control"
                  name="favoritePlayer"
                  id="favoritePlayer"
                  placeholder="Favorite Player"
                  value="<%=userProfile.favoritePlayer%>"
                />
              </div>
              <div class="col-md-6 form-group">
                <input
                  type="hidden"
                  name="user"
                  class="form-control"
                  id="user"
                  placeholder="User ID"
                  value="<%=userProfile.user._id%>"
                />
              </div>
              <div class="col-md-6 form-group">
                <input
                  type="hidden"
                  name="id"
                  class="form-control"
                  id="id"
                  placeholder="User Profile ID"
                  value="<%=userProfile._id%>"
                />
              </div>
            
              
            </div>
          </div>
            <div class="my-3">
              <div class="loading">Loading</div>
              <div class="error-message"></div>
              <div class="sent-message">
                Your message has been sent. Thank you!
              </div>
            </div>
            <div class="text-center"><button type="submit" name="submit">Save</button></div>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- End Contact Section -->
</main>
<!-- End #main -->
