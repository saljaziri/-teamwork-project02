<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="breadcrumb-hero">
        <div class="container">
          <div class="breadcrumb-hero">
            <h2>Edit Dream Club</h2>
          </div>
        </div>
      </div>
      <div class="container">
        <ol>
          <li><a href="/dreamClub/index">Dream Club</a></li>
          <li>Edit Dream Club</li>
        </ol>
      </div>
    </section>
    <!-- End Breadcrumbs -->
  
    <!-- ======= Contact Section ======= -->
    <section id="editDreamClub" class="contact">
      <div class="container">
        <div class="row mt-5">
          <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">
            <form
            enctype="multipart/form-data"
              action="/dreamClub/update?_method=PUT"
              method="POST"
              class="php-email-form">

              <div class="member-img text-center">
                <% if(dreamClub.dreamClubImage =="" ) {  %>
                  <img class="img-fluid col-md-4 form-group" id="dreamClubImage" name="dreamClubImage" src="https://via.placeholder.com/1800"/>
  
               <% }else{ %>
                <img class="img-fluid col-md-4 form-group" id="dreamClubImage" name="dreamClubImage" src="../img/<%=dreamClub.dreamClubImage%>" />
                <input type="hidden" id="previousDreamClubImage" name="previousDreamClubImage" value="<%=dreamClub.dreamClubImage%>" />
  
              <%  }%>
                <input type="file" id="dreamClubImageFile" name="dreamClubImageFile" style="display: none;" />
              </div>
              <div class="row">
                
                  <div class="col-md-6 form-group mt-3 mt-md-0">
                    <select name="club" id="club" class="form-control">
                      <option value="" disabled selected>Select Club</option>
      
                      <% clubs.forEach(club =>{ %>
                      <option <%= dreamClub.club._id.toString()==club._id ? 'selected' : ''%> value="<%=club._id%>"><%=club.name%></option>
                      <%}) %>
                    </select>
                  </div>
                
                  <div class="col-md-6 form-group mt-3 mt-md-0">
                    <select name="player" id="player" class="form-control">
                      <option value="" disabled selected>Select Player</option>
                      <%=dreamClub%>

                      <% players.forEach(player =>{ %>
                        <%=dreamClub%>
                      <option <%= dreamClub.player._id.toString()==player._id ? 'selected' : ''%> value="<%=player._id%>"><%=player.name%></option>
                      <%}) %>
                    </select>
                  </div>
                  <div class="col-md-6 form-group">
                    <input
                      type="text"
                      name="kitNumber"
                      class="form-control"
                      id="kitNumber"
                      placeholder="Kit Number"
                      value="<%=dreamClub.kitNumber%>" 
                    
                    />
                  </div>

                  <div class="col-md-6 form-group mt-3 mt-md-0">
                    <select name="playerPosition" id="playerPosition" class="form-control">
                      <option value="" disabled selected>Select Position</option>
      
                      <% playerPositions.forEach(playerPosition =>{ %>
                        
                      <option <%=dreamClub.playerPosition===playerPosition ? 'selected' : ''%> value="<%=playerPosition%>"><%=playerPosition%></option>
                      <%}) %>
                    </select>
                  </div>
               
                <div class="col-md-6 form-group">
                  <input
                    type="text"
                    name="playerVideo"
                    class="form-control"
                    id="playerVideo"
                    placeholder="Player Video URL"
                    value="<%=dreamClub.playerVideo%>"
                  />
                </div>
                <div class="col-md-6 form-group">
                    <input
                      type="text"
                      name="comment"
                      class="form-control"
                      id="comment"
                      placeholder="Comment"
                      value="<%=dreamClub.comment%>"
                    />
                  </div>
                <div class="col-md-6 form-group">
                    <input
                      type="hidden"
                      name="user"
                      class="form-control"
                      id="user"
                      placeholder="user"
                      value="<%=dreamClub.user._id%>"
                      required
                    />
                  </div>
                  <div class="col-md-6 form-group">
                    <input
                      type="hidden"
                      name="id"
                      class="form-control"
                      id="id"
                      placeholder="id"
                      value="<%=dreamClub._id%>"
                      required
                    />
                  </div>
                  
              </div>
             
  
              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">
                  Your message has been sent. Thank you!
                </div>
              </div>
              <div class="text-center"><button type="submit" name="submit">Edit Dream Club</button></div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- End Contact Section -->
  </main>
  <!-- End #main -->
  