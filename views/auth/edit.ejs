

<main id="main">
  <!-- ======= Breadcrumbs ======= -->
  <section id="breadcrumbs" class="breadcrumbs">
    <div class="breadcrumb-hero">
      <div class="container">
        <div class="breadcrumb-hero">
          <h2>Edit User</h2>
        </div>
      </div>
    </div>
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li>Edit User</li>
      </ol>
    </div>
  </section>
  <!-- End Breadcrumbs -->

  <!-- ======= Contact Section ======= -->
  <section id="user" class="contact">
    <div class="container">
      <div class="row mt-5">
        <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">
          <form
            action="/auth/update?_method=PUT"
            method="POST"
            class="php-email-form">
          

            <div class="row">

  

              <div class="col-md-6 form-group">
                <input
                  type="text"
                  name="firstName"
                  class="form-control"
                  id="firstName"
                  placeholder="First Name"
                  value="<%=user.firstName%>"

                
                />
              </div>
              <div class="col-md-6 form-group mt-3 mt-md-0">
                <input
                  type="text"
                  class="form-control"
                  name="lastName"
                  id="lastName"
                  placeholder="Last Name"
                  value="<%=user.lastName%>"
                />
              </div>
              <div class="col-md-6 form-group mt-3 mt-md-0">
                <input
                  type="text"
                  class="form-control"
                  name="emailAddress"
                  id="emailAddress"
                  placeholder="Email Address"
                  value="<%=user.emailAddress%>"
                />
              </div>
              <div class="col-md-6 form-group mt-3 mt-md-0">
                <select name="role" id="role" class="form-control">
                  <option value="" disabled selected>Select Role</option>
  
                  <% roles.forEach(role =>{ %>
                  <option <%= role==user.role ? 'selected' : ''%> value="<%=role%>"><%=role%></option>
                  <%}) %>
                </select>
              </div>
              <div class="col-md-6 form-group">
                <input
                  type="hidden"
                  name="id"
                  class="form-control"
                  id="id"
                  placeholder="User ID"
                  value="<%=user._id%>"
                />
              </div>
              
            
              
            
          </div>
            <div class="my-3">
              <div class="loading">Loading</div>
              <div class="error-message"></div>
              <div class="sent-message">
                Your message has been sent. Thank you!
              </div>
            </div>
            <div class="text-center"><button type="submit" name="submit">Save</button></div>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- End Contact Section -->
</main>
<!-- End #main -->
